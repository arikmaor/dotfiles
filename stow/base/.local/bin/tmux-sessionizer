#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(cat \
    <(tmux list-sessions -F '#{session_name}') \
    <(echo 'eyes') \
    <(find ~/projects ~/projects/autonomous ~/devel/applitools ~ -mindepth 1 -maxdepth 1 -type d -not -path '*/.*') |
    fzf-tmux -p --reverse)
fi

if [[ -z $selected ]]; then
  exit 0
fi

if [ "$selected" = "eyes" ]; then
  selected_name='eyes'
  selected="$HOME/devel/applitools/src"
else
  selected_name=$(basename "$selected" | tr . _)
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
  tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
